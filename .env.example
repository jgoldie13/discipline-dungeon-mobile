# Database
DATABASE_URL="postgresql://user:password@localhost:5432/discipline_dungeon?schema=public"

# Security - Cron Jobs
# Required for /api/cron/evaluate-stakes endpoint
# Generate a strong random string (e.g., openssl rand -base64 32)
# Configure this same value in Vercel cron job settings
CRON_SECRET="your-secret-here"

# Security - Debug Endpoints (optional, only for non-production)
# Required for /api/debug/* endpoints in non-production environments
# Omit in production (debug endpoints are blocked in production regardless)
DEBUG_API_KEY="your-debug-key-here"

# App Configuration
NODE_ENV="development"
